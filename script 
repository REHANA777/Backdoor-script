-- GUI Scanner dengan tombol Rescan
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0,400,0,350)
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Position = UDim2.new(0.5,0,0.5,0)
Frame.BackgroundColor3 = Color3.fromRGB(40,40,40)
Frame.Active = true
Frame.Draggable = true

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, -10, 0, 30)
Title.Position = UDim2.new(0,5,0,5)
Title.Text = "Backdoor Detector"
Title.TextColor3 = Color3.new(1,1,1)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20

local Scrolling = Instance.new("ScrollingFrame", Frame)
Scrolling.Size = UDim2.new(1, -10, 1, -70)
Scrolling.Position = UDim2.new(0,5,0,40)
Scrolling.CanvasSize = UDim2.new(0,0,0,0)

local UIListLayout = Instance.new("UIListLayout", Scrolling)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder

local Rescan = Instance.new("TextButton", Frame)
Rescan.Size = UDim2.new(1, -10, 0, 25)
Rescan.Position = UDim2.new(0,5,1,-30)
Rescan.Text = "Rescan"
Rescan.BackgroundColor3 = Color3.fromRGB(80,80,80)
Rescan.TextColor3 = Color3.new(1,1,1)
Rescan.Font = Enum.Font.SourceSans
Rescan.TextSize = 18

local function log(msg, col)
    local Label = Instance.new("TextLabel", Scrolling)
    Label.Size = UDim2.new(1, -5, 0, 20)
    Label.BackgroundTransparency = 1
    Label.TextXAlignment = Enum.TextXAlignment.Left
    Label.Text = msg
    Label.TextColor3 = col
    Scrolling.CanvasSize = UDim2.new(0,0,0,UIListLayout.AbsoluteContentSize.Y + 10)
end

local function performScan()
    for _, v in pairs(Scrolling:GetChildren()) do
        if v:IsA("TextLabel") and v ~= Title then
            v:Destroy()
        end
    end
    log("— Start Scan —", Color3.fromRGB(200,200,200))

    for _, svc in pairs(game:GetChildren()) do
        for _, obj in pairs(svc:GetDescendants()) do
            if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
                log("  Remote found: " .. obj:GetFullName(), Color3.fromRGB(255,255,0))
            elseif obj:IsA("ModuleScript") or obj:IsA("LocalScript") or obj:IsA("Script") then
                local name = obj.Name:lower()
                if name:find("admin") or name:find("require") then
                    log("  Suspicious script: " .. obj:GetFullName(), Color3.fromRGB(255,100,100))
                end
            end
        end
    end

    log("— Scan Complete —", Color3.fromRGB(100,255,100))
end

Rescan.MouseButton1Click:Connect(performScan)
performScan()